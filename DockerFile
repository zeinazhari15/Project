# --- Build stage ---
FROM golang:1.21-alpine AS build
WORKDIR /src

# Cache module downloads
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build binary (sesuaikan path main jika diperlukan)
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /app/app ./cmd/_your_app_

# --- Final stage ---
FROM alpine:3.18
RUN apk add --no-cache ca-certificates

WORKDIR /app

# Copy binary from build stage
COPY --from=build /app/app .

# Copy web folder (templates + static)
COPY --from=build /src/web ./web

# Expose port (app akan membaca env PORT)
EXPOSE 8080
ENV PORT=8080

# Run the binary
CMD ["./app"]
